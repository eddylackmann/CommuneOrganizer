<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.commune.organizer.communeorganizer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:parentActivityName="de.commune.organizer.communeorganizer.login"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screenSplash" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login" android:theme="@style/SplashTheme"/>
        <activity android:name=".create_commune" />
        <activity android:name=".registration"   android:theme="@style/SplashTheme" />
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".createOrJoinCommune" />
        <activity android:name=".enter_commune" />
        <activity android:name=".cleaningRoster" />
        <activity android:name=".activity_userInfo" />
        <activity android:name=".commune_info" />
        <activity android:name="MainActivity"
            android:theme="@style/SplashTheme"
            >

        </activity>
    </application>

</manifest>