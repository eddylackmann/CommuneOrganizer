<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:toolbarId="@+id/toolbar">

                <TextView
                    android:id="@+id/anmldText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="WG INFO"
                    android:textColor="#FFFF"
                    android:textSize="25sp" />
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:id="@+id/linChangeComLayout1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_below="@id/appbar"
                >
                <TextView
                    android:id="@+id/communeID"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="WG-ID:"
                    android:layout_marginTop="12dp"
                    android:ems="10"
                    />
                <TextView
                    android:id="@+id/infocommuneID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linChangeComLayout1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoPW"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="WG-Passwort:" />

                <TextView
                    android:id="@+id/infoPWText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:enabled="false"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoAddress"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Adresse:" />

                <TextView
                    android:id="@+id/infoAddressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoZIP"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Postleitzahl:" />

                <TextView
                    android:id="@+id/infoZIPText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoCity"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Stadt:" />

                <TextView
                    android:id="@+id/infoCityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoMaxInh"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Anzahl der max. Einwohner:" />

                <TextView
                    android:id="@+id/infoMaxInhText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoInh"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Anzahl aktueller Einwohner:" />

                <TextView
                    android:id="@+id/infoInhText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoPets"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="Tiere sind erlaubt:" />

                <CheckBox
                    android:id="@+id/infoPetsBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:enabled="false"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoSpace"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Gesamtfläche:" />

                <TextView
                    android:id="@+id/infoSpaceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoRent"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Kaltmiete:" />

                <TextView
                    android:id="@+id/infoRentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout11"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoAddCost"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Nebenkosten:" />

                <TextView
                    android:id="@+id/infoAddCostText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout13"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoOtherCost"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Zusätziche Kosten:" />

                <TextView
                    android:id="@+id/infoOtherCostText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout13"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoComDesc"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Beschreibung:" />

                <TextView
                    android:id="@+id/infoComDescText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="" />

            </LinearLayout>

            <Button
                android:id="@+id/changeComInfoBtn"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linInfoLayout14"
                android:layout_marginTop="15dp"
                android:background="@android:color/holo_green_dark"
                android:gravity="center_vertical|center_horizontal"
                android:text="INFORMATIONEN BEARBEITEN"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:enabled="false"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
