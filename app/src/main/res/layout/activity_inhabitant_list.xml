<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#000"
        android:id="@+id/header_text">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/wg_e"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/inhabitantText"
            android:layout_width="180dp"
            android:layout_height="50dp"

            android:gravity="center_vertical|center_horizontal"
            android:text="Mitbewohner"
            android:background="#fff"
            android:textColor="#000"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inhabitantsection_1"
        android:layout_below="@+id/header_text">

    </RelativeLayout>

    <RelativeLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inhabitantsection_1"
        android:layout_marginTop="15dp">
        <GridView
            android:id="@+id/inhabitantListGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:horizontalSpacing="10dp"
            android:gravity="center_vertical|clip_horizontal"
            android:numColumns="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>
