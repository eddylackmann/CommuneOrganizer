<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:toolbarId="@+id/toolbar">

                <TextView
                    android:id="@+id/anmldText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="WG INFO BEARBEIEN"
                    android:textColor="#FFFF"
                    android:textSize="25sp" />
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoPWChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="WG-Passwort:" />

                <EditText
                    android:id="@+id/infoPWTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:enabled="false"
                    android:hint=""
                    android:fontFamily="serif"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linInfoLayout1">

                <TextView
                    android:id="@+id/infoAddressChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Adresse:" />

                <EditText
                    android:id="@+id/infoAddressTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint=""
                    android:fontFamily="serif"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoZIPChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Postleitzahl:" />

                <EditText
                    android:id="@+id/infoZIPTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint=""
                    android:fontFamily="serif"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoCityChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Stadt:" />

                <EditText
                    android:id="@+id/infoCityTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint=""
                    android:fontFamily="serif"
                    android:inputType="text"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoMaxInhChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="Anzahl der max. Einwohner:" />

                <EditText
                    android:id="@+id/infoMaxInhTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint=""
                    android:fontFamily="serif"
                    android:inputType="number"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoPetsChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="Tiere sind erlaubt:" />

                <CheckBox
                    android:id="@+id/infoPetsBoxChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:enabled="true"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linInfoLayout10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout9"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoSpaceChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Gesamtfläche:" />

                <EditText
                    android:id="@+id/infoSpaceTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoRentChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Kaltmiete:" />

                <EditText
                    android:id="@+id/infoRentTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout11"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoAddCostChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Nebenkosten:" />

                <EditText
                    android:id="@+id/infoAddCostTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout13"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout12"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoOtherCostChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Zusätziche Kosten:" />

                <EditText
                    android:id="@+id/infoOtherCostTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=""
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linInfoLayout14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linInfoLayout13"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/infoComDescChange"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:text="Beschreibung:" />

                <EditText
                    android:id="@+id/infoComDescTextChange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint=""
                    android:inputType="text" />

            </LinearLayout>

            <Button
                android:id="@+id/confirmComInfoBtn"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linInfoLayout14"
                android:layout_marginTop="15dp"
                android:background="@android:color/holo_green_dark"
                android:gravity="center_vertical|center_horizontal"
                android:text="Übernehmen"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:enabled="false"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
