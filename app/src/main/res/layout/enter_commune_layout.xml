<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wg_n" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_light_default">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:gravity="center_vertical|center_horizontal"
            android:text="WG beitreten"
            android:textColor="#fff"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/enter_communeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title_text"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="WG-ID"
            android:inputType="textPersonName"
            android:textColor="#fff"
            android:textColorHint="#fff" />


        <EditText
            android:id="@+id/enter_communePwText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enter_communeID"
            android:layout_marginTop="16dp"
            android:hint="WG-Passwort"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/enter_joinBtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/enter_communePwText"

            android:layout_marginTop="30dp"
            android:background="#fff"
            android:text="Beitreten"
            android:textColor="#000" />

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/enter_joinBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
