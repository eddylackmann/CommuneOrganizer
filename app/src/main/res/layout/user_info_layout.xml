<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/user_section_1"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wg_i" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:gravity="center_vertical|center_horizontal"
                    android:text=" Benutzer Infos "
                    android:textColor="#000"
                    android:textSize="25sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_section_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_section_1">

                <LinearLayout
                    android:id="@+id/linInfoLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/infoemailText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:text="Email:"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/infoEmailTextInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:enabled="false"
                        android:hint=""
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linInfoLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linInfoLayout1"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/infoPWText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:text="Passwort:"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/infoPWTextInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:hint=""
                        android:inputType="textPassword"
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/linInfoLayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linInfoLayout2"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:textColor="#fff">

                    <TextView
                        android:id="@+id/infoFirstnameText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:text="Vorname:"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/infoFirstnameTextInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:hint=""
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linInfoLayout4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linInfoLayout3"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/infolastnameText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"

                        android:text="Nachname:"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/infoLastnameTextInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:hint=""
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linInfoLayout5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linInfoLayout4"

                    android:background="#fff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/infobirthdayText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:ems="10"
                        android:text="Geburtsdatum:"
                        android:textColor="#000" />

                    <EditText
                        android:id="@+id/infoBirthdayTextInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="#fff"
                        android:editable="false"
                        android:ems="10"
                        android:hint=""
                        android:textColor="#000" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linInfoLayout9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linInfoLayout5"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum=".9">

                    <Button
                        android:id="@+id/changeInfoBtn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.3"
                        android:background="#00810D"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Änderungen speichern"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/user_info_leaveBtn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.3"
                        android:background="#b00000"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="WG VERLASSEN"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/user_info_deleteBtn"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0.3"
                        android:background="#000000"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Account löschen"
                        android:textColor="#fff" />

                </LinearLayout>

                <TextView
                    android:id="@+id/userInfo_LineSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:layout_below="@+id/linInfoLayout9"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#000"
                    android:gravity="center_vertical|center_horizontal" />

                <TextView
                    android:id="@+id/new_Admin_LBL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userInfo_LineSeparator"
                    android:padding="10dp"
                    android:text="Neuer Admin" />

                <Spinner
                    android:id="@+id/newAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_Admin_LBL"
                    android:inputType="textEmailAddress"
                    android:spinnerMode="dropdown" />

                <Button
                    android:id="@+id/user_info_transferAdminStatusBtn"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newAdmin"
                    android:layout_marginTop="25dp"
                    android:background="#FF3F51B5"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Adminstatus übertragen"
                    android:textColor="#fff" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
