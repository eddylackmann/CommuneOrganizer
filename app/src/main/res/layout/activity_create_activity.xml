<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:toolbarId="@+id/toolbar">

                <TextView
                    android:id="@+id/ActivityText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="AKTIVITÄT ERSTELLEN"
                    android:textColor="#FFFF"
                    android:textSize="25sp" />
            </android.support.design.widget.AppBarLayout>

           <EditText
                android:id="@+id/dateActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar"
                android:hint="Datum" />

            <EditText
                android:id="@+id/timeActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dateActivity"
                android:hint="Uhrzeit" />

            <EditText
                android:id="@+id/descActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/timeActivity"
                android:hint="Beschreibung" />

            <Button
                android:id="@+id/addActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/descActivity"
                android:background="@android:color/holo_green_dark"
                android:text="Aktivität hinzufügen"
                android:textColor="#FFFF" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>