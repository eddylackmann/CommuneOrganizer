<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.commune.organizer.communeorganizer.create_commune">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        >


        <TextView
            android:id="@+id/anmldText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="WG-GRÜNDEN"
            android:textColor="#FFFF"
            android:textSize="25sp" />
    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/comAdressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:hint="WG-Adresse"
        android:layout_marginTop="12dp"

        android:ems="10"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/comZipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PLZ"
        android:layout_below="@+id/comAdressText"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/comCityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ort"
        android:layout_below="@+id/comZipText"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/comPW1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="WG-Passwort"
        android:layout_below="@+id/comCityText"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/comPW2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="WG-Passwort wiederholen"
        android:inputType="numberPassword"
        android:layout_below="@+id/comPW1"
         />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/colorAccent"
        android:layout_height="30dp"
        android:textColor="#FFFF"
        android:layout_below="@+id/comPW2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Benutzer Informationen" />

    <EditText
        android:id="@+id/uFirstName"
        android:layout_width="match_parent"
        android:hint="Vorname"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/uLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nachname"
        android:layout_below="@+id/uFirstName"
        />

    <EditText
        android:id="@+id/uEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"

        android:layout_below="@+id/uLastName"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/uPW1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:hint="Passwort"
        android:layout_below="@+id/uEmail"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/uPW2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Passwort wiederholen"
        android:layout_below="@+id/uPW1"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="GRÜNDEN" />


</RelativeLayout>


