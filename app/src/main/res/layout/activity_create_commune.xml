<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.commune.organizer.communeorganizer.create_commune">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="163dp"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:contentScrim="?attr/colorPrimary">

            <TextView
                android:id="@+id/anmldText"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="25sp"
                android:textColor="#FFFF"
                android:text="WG - GRÃœNDEN" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context="de.commune.organizer.communeorganizer.registration">


            <EditText
                android:id="@+id/regCommuneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="WG-Name"
                android:inputType="textPersonName"
                android:layout_marginTop="42dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/regCommunePw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="WG-Passwort"
                android:inputType="textPassword"
                android:layout_below="@+id/regCommuneName"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/regUserLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Vorname"
                android:inputType="textPassword"
                android:layout_marginTop="34dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/regFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nachname "
                android:inputType="textPassword"
                android:layout_below="@+id/regUserLastName"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp" />

            <EditText
                android:id="@+id/regEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Email"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/regFirstName"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/regUserPw1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Passwort"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/regEmail"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/regUserPw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Passwort wiederholen"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/regUserPw1"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="62dp"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical|center_horizontal"
                android:text="BENUTZER INFORMATIONEN"
                android:layout_below="@+id/regCommunePw"
                android:layout_alignParentStart="true" />


            <Button
                android:id="@+id/regRegisterBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/colorAccent"
                android:text="Beitretren"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textColorLink="@android:color/holo_orange_dark"
                android:layout_below="@+id/regUserPw2"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>


