<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/wg_h" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="de.commune.organizer.communeorganizer.CreateJoinCommune_Activity">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/common_google_signin_btn_text_light_default"
                android:gravity="center_vertical|center_horizontal"
                android:text="Beitreten | Gründen"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <Button
                android:id="@+id/enterComBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/title_text"
                android:layout_marginTop="50dp"
                android:background="#000"
                android:text="WG BEITRETEN"
                android:textColor="#fff" />

            <Button
                android:id="@+id/createBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/enterComBtn"
                android:layout_marginTop="20dp"
                android:background="#ffff"
                android:text="WG GRÜNDEN"
                android:textColor="#000" />

            <Button
                android:id="@+id/deleteUserBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/createBtn"
                android:layout_marginTop="20dp"
                android:background="#b00"
                android:text="Benutzer löschen"
                android:textColor="#fff" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
