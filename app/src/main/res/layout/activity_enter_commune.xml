<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:src="@drawable/wg_n"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:layout_height="match_parent"
       >

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="WG BEITRETEN"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



            <EditText
                android:id="@+id/enter_communeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:layout_below="@+id/title_text"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="WG-ID"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/enter_communePwText"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/enter_communeID"
                android:layout_marginTop="16dp"
                android:hint="WG-Passwort"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/enter_joinBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#fff"
                android:text="Beitreten"

                android:textColor="#000"
                android:layout_below="@+id/enter_communePwText"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <Space
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/enter_joinBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

        </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
