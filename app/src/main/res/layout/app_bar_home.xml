<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.commune.organizer.communeorganizer.Home_Activity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_home" />

    <TextView
        android:id="@+id/userHomeDescrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/appBarLayout"
        android:layout_marginTop="85dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textColor="#ffff"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/addressHomeDescrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/userHomeDescrition"
        android:layout_marginTop="49dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="a"
        android:textColor="#ffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/communeHomeDescrition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addressHomeDescrition"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="b"
        android:textColor="#ffff"
        android:textSize="14dp" />
</RelativeLayout>