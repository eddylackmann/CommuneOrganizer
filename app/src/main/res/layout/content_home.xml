<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/fixedlayout"
        android:scaleType="centerCrop">
        <ImageView
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:src="@drawable/wg_n"
            android:scaleType="centerCrop" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/fixedlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#000"
        android:layout_below="@+id/fixedlayout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/fluidlayout"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cashlayout">
            <Button
                android:id="@+id/home_communeCash"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#000"
                android:textSize="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="KASSE: 350 â‚¬"
                android:textColor="#00810D"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeFirst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/cashlayout"
            android:weightSum="1.0"
            >


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/addsection"
            android:layout_below="@+id/homeFirst"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/home_cashBtn"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:background="#00810D"
                android:gravity="center_vertical|center_horizontal"
                android:text="Einzahlung"

                android:textColor="#fff" />


        </LinearLayout>
        <TextClock
            android:layout_width="match_parent"

            android:gravity="center_vertical|center_horizontal"
            android:textSize="40dp"
            android:background="#000"
            android:layout_height="80dp"
            android:textColor="#fff"
            android:layout_below="@+id/addsection"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

</RelativeLayout>
