<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:id="@+id/fixedlayout"
        android:scaleType="centerCrop">
        <ImageView
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:src="@drawable/wg_n"
            android:scaleType="centerCrop" />



    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/fixedlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#000"
        android:layout_below="@+id/fixedlayout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/fluidlayout"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cashlayout">
            <Button
                android:id="@+id/home_communeCash"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000"
                android:textSize="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="KASSE: 350 €"
                android:textColor="#00810D"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/homeFirst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/cashlayout"
            android:weightSum="1.0"
            >
            <Button
                android:id="@+id/homeTask"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="0dip"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:gravity="center_vertical|center_horizontal"
                android:text="Putzplan"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:layout_weight=".5"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/homeShoopingList"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="0dip"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:layout_weight=".5"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Einkaufliste"
                android:textColor="#000"
                android:layout_below="@+id/homeTask"
                android:layout_alignParentStart="true" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeFirst"
            android:id="@+id/line2"
            android:weightSum="1.0"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/homeActivity"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:gravity="center_vertical|center_horizontal"
                android:text="Nächste Aktivitäten"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:layout_below="@+id/homeShoopingList"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/homeUser"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="0dip"
                android:layout_height="70dp"
                android:background="@android:color/white"
                android:layout_weight=".5"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="Mein Profil"
                android:textColor="#000"

                android:layout_alignParentStart="true" />



        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>

</RelativeLayout>
