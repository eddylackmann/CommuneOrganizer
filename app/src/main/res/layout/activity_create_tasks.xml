<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                app:toolbarId="@+id/toolbar">

                <TextView
                    android:id="@+id/finishpurchaseText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="AUFGABEN ANLEGEN"
                    android:textColor="#FFFF"
                    android:textSize="25sp" />
            </android.support.design.widget.AppBarLayout>

            <TextView
                android:id="@+id/purchPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/appbar"
                android:gravity="center_vertical|center_horizontal"
                android:text="Einkaufsplan"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/respPurchPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/purchPlan"
                android:layout_marginTop="15dp"
                android:hint="Verantwortlicher" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/respPurchPlan"
                android:hint="Datum" />

            <Button
                android:id="@+id/addPurchPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/date"
                android:background="@android:color/holo_green_dark"
                android:text="Einkaufsplan hinzufügen"
                android:textColor="#FFFF" />

            <TextView
                android:id="@+id/borderline"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_below="@+id/addPurchPlan"
                android:layout_marginTop="25dp"
                android:background="@color/colorBlack" />

            <TextView
                android:id="@+id/cleanPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/borderline"
                android:gravity="center_vertical|center_horizontal"
                android:text="Putzplan"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/respCleanPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cleanPlan"
                android:layout_marginTop="15dp"
                android:hint="Verantwortlicher" />

            <EditText
                android:id="@+id/dateFromClean"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/respCleanPlan"
                android:hint="Datum von" />

            <EditText
                android:id="@+id/dateToClean"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dateFromClean"
                android:hint="Datum bis" />

            <EditText
                android:id="@+id/descCleanPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/dateToClean"
                android:hint="Beschreibung" />

            <Button
                android:id="@+id/addCleanPlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/descCleanPlan"
                android:background="@android:color/holo_green_dark"
                android:text="Putzplan hinzufügen"
                android:textColor="#FFFF" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>