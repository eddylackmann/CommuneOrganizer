<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="771dp"
            tools:context="de.commune.organizer.communeorganizer.registration">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="192dp">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                    app:toolbarId="@+id/toolbar">

                    <TextView
                        android:id="@+id/regText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="REGISTRIEREN"
                        android:textColor="#FFFF"
                        android:textSize="25sp" />

                </android.support.design.widget.CollapsingToolbarLayout>


            </android.support.design.widget.AppBarLayout>

            <EditText
                android:id="@+id/uFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/appbar"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Vorname"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/uPwRepeatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uPwText"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Passwort wiederholen"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/uPwText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Passwort"
                android:inputType="textPassword"
                android:layout_below="@+id/MailText"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/MailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uLastname"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="E-Mail Adresse"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/uLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uFirstname"
                android:ems="10"
                android:hint="Nachname"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/regBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_dark"
                android:text="REGISTRIEREN"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:layout_below="@+id/uPwRepeatText"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />

            <Space
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/regBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="77dp" />


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
