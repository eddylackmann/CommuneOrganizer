<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:scaleType="centerCrop" >
    <ImageView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:src="@drawable/wg_l"
        android:scaleType="centerCrop" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="771dp"
            tools:context="de.commune.organizer.communeorganizer.registration">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/common_google_signin_btn_text_light_default"
                android:gravity="center_vertical|center_horizontal"
                android:text="REGISTRIEREN"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/uFirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:ems="10"
                android:hint="Vorname"
                android:inputType="textPersonName"
                android:layout_below="@+id/title_text"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" />


            <EditText
                android:id="@+id/uPwRepeatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uPwText"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Passwort wiederholen"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/uPwText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Passwort"
                android:inputType="textPassword"
                android:layout_below="@+id/MailText"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/MailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uLastname"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="E-Mail Adresse"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/uLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/uFirstname"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Nachname"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/regBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/black"
                android:text="REGISTRIEREN"
                android:textColor="@android:color/white"
                android:layout_below="@+id/uPwRepeatText"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp" />




        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
